<% if user_signed_in? %>
  <div class = "search-form">
    <h1>User search</h1>

    <%= form_with url: search_box_path, method: :get, local: true do |f| %>
  　 　<%= f.text_field :letter %>
  　 　<%= f.select :model, options_for_select({'ユーザー' => 'user', '投稿' => 'book'}) %>
  　 　<%= f.select :target, options_for_select({'完全一致' => 'perfect', '部分一致' => 'part', '前方一致' => 'front', '後方一致' => 'back'}) %>
  　 　<%= f.submit :search %>
    <% end %>

  </div>
<% end %>

