 <% if user_signed_in? %>
  <div class = "search-form">
    <%= form_with url: search_path, method: :get, local: true do |f| %>
      <%= f.text_field :letter %>
  　　　<%= f.select :model, options_for_select({'ユーザー' => 'user', '投稿' => 'book'}) %>
      <%= f.select :target, options_for_select({'完全一致' => 'perfect', '部分一致' => 'part', '前方一致' => 'front', '後方一致' => 'back'}) %>
      <%= f.submit :search %>
    <% end %>
  </div>
 <% end %>

<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>

      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
    </div>
  </div>
</div>